<div id="<%= dom_id job %>">
  <% if job.user %>
    <div>Posted by: <%= job.user.email %> </div>
  <% end %>

<% job.each do |title|>

  <p>
    <strong>Title:</strong>
    <%= job.title %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= job.company %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= job.salary %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= job.location %>
  </p>
</div>