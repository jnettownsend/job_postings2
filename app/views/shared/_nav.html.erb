<ul>
  <li><%= link_to 'Home', root_path %></li>
  <% if logged_in? %>
    <li><%= link_to 'Jobs', jobs_path %></li>
    <li><%= link_to 'Logout', logout_path, data: {'turbo-method': :delete} %></li>
  <% else %>
    <li><%= link_to 'Sign Up', sign_up_path %></li>
    <li><%= link_to 'Login', login_path %></li>
  <li>
    <%= form_with url: "/openings/search", method: :get do |form| %> <%= form.label :query, "Search for:" %> 
    <%= form.text_field :query %> <%= form.submit "Search" %> <% end %>
  </li>
</ul>